# ===========================================
# CLAW ARENA Backend Configuration
# ===========================================

# Database
MONGO_URL=mongodb://localhost:27017
DB_NAME=claw_arena

# Admin API Key (for protected endpoints)
ADMIN_API_KEY=

# ===========================================
# Network Configuration
# ===========================================

# Default network: "testnet" or "mainnet"
DEFAULT_NETWORK=testnet

# Monad Testnet (Chain ID: 10143)
TESTNET_CHAIN_ID=10143
TESTNET_RPC_URL=https://testnet-rpc.monad.xyz
TESTNET_EXPLORER_URL=https://testnet.monadexplorer.com

# Monad Mainnet (Chain ID: 143)
MAINNET_CHAIN_ID=143
MAINNET_RPC_URL=https://rpc.monad.xyz
MAINNET_EXPLORER_URL=https://monadscan.com

# ===========================================
# Contract Addresses - Testnet
# ===========================================

TESTNET_ARENA_FACTORY_ADDRESS=
TESTNET_TREASURY_ADDRESS=

# ===========================================
# Contract Addresses - Mainnet
# ===========================================

MAINNET_ARENA_FACTORY_ADDRESS=
MAINNET_TREASURY_ADDRESS=

# ===========================================
# Agent Signer Configuration
# ===========================================

# Option 1: Use the built-in agent signer (agent_signer.py)
# Set the URL where agent_signer.py is running
AGENT_SIGNER_URL=http://localhost:8002

# Option 2: Use OpenClaw Gateway
# OPENCLAW_API_URL=http://localhost:18789/api/v1/tools
# OPENCLAW_API_KEY=your_bearer_token

# Operator wallet address (derived from private key)
OPERATOR_ADDRESS=

# ===========================================
# Agent Signer Service (agent_signer.py)
# ===========================================

# Private key for signing (KEEP SECRET!)
# This is the wallet that will sign finalization transactions
OPERATOR_PRIVATE_KEY=

# Port for the agent signer service
AGENT_PORT=8002

# ===========================================
# CORS Configuration
# ===========================================

CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# Autonomous Agent Configuration
# ===========================================

# Backend API URL (for agent to call)
BACKEND_API_URL=http://localhost:8000

# How often the agent checks and creates tournaments (in minutes)
AGENT_INTERVAL_MINUTES=30

# Minimum number of active tournaments to maintain
MIN_TOURNAMENTS_ACTIVE=2

# Maximum number of active tournaments allowed
MAX_TOURNAMENTS_ACTIVE=5

# AI Model for agent decisions (optional, for advanced reasoning)
# OPENAI_API_KEY=your_openai_key
# ANTHROPIC_API_KEY=your_anthropic_key
